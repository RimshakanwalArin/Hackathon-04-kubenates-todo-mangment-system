{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "Cloud Native Todo Chatbot Backend Service",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles",
    "test:contract": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/contract/ --detectOpenHandles",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration/ --detectOpenHandles",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/unit/ --detectOpenHandles",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --detectOpenHandles",
    "lint": "eslint src/ tests/ || true"
  },
  "keywords": [
    "todo",
    "api",
    "rest",
    "chatbot",
    "kubernetes",
    "cloud-native"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
